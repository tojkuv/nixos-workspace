# EditorConfig for NixOS Configuration
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Nix files
[*.nix]
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Justfile
[justfile]
indent_style = space
indent_size = 4
